---
layout: base.njk
title: Golden Wings Documentary Screening - {{ site.hero.date }}
description: Join us for the premiere screening of Golden Wings, featuring Robyn Stewart's incredible 50+ year career as an American Airlines flight attendant
---

<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
  <!-- Hero Section with Video Background -->
  <header class="relative overflow-hidden bg-gradient-to-r from-blue-900 to-blue-700 text-white">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
      poster="/videos/poster.jpg"
    >
      <source src="/videos/clouds-aerial.mp4" type="video/mp4">
      <source src="/videos/clouds-aerial.webm" type="video/webm">
    </video>

    <div class="absolute inset-0 bg-black opacity-40"></div>

    <div class="relative container mx-auto px-6 py-24 text-center z-10">
      <img src="/images/gwnewlogosmall.png" alt="Golden Wings logo" class="mx-auto mb-6 w-32 h-auto drop-shadow-lg" loading="lazy">

      <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in">
        {{ site.hero.title }}
      </h1>
      <p class="text-xl md:text-2xl mb-4 opacity-90">
        {{ site.hero.subtitle }}
      </p>
      <p class="text-lg md:text-xl mb-8 opacity-75">
        Screening: {{ site.hero.date }} | {{ site.hero.time }}
      </p>
      <a href="#rsvp" class="inline-block bg-white text-blue-900 font-bold px-8 py-4 rounded-lg hover:bg-blue-50 transform hover:scale-105 transition-all">
        {{ site.hero.ctaText }}
      </a>
    </div>
  </header>

<!-- About Section -->
<section class="container mx-auto px-6 py-16">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-8 text-blue-900">{{ site.about.heading }}</h2>

    {% for paragraph in site.about.paragraphs %}
      <p class="text-lg text-gray-700 leading-relaxed mb-6">
        {{ paragraph | safe }}
      </p>
    {% endfor %}

    <div class="flex justify-center mt-12">
      <img
        src="/images/gwnewlogosmall.png"
        alt="Golden Wings logo"
        class="w-40 h-auto drop-shadow-lg"
        loading="lazy"
      >
    </div>
  </div>
</section>


  <!-- RSVP Section -->
  <section id="rsvp" class="bg-blue-50 py-16">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-xl p-8">
        <h2 class="text-3xl font-bold text-center mb-8 text-blue-900">{{ site.rsvp.heading }}</h2>

        <form id="rsvp-form" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
          </div>

          <div>
            <label for="source" class="block text-sm font-medium text-gray-700 mb-2">How did you hear about us?</label>
            <input
              type="text"
              id="source"
              name="source"
              placeholder="Friend, Film Festival, Social Media, etc."
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
          </div>

          <!-- Google reCAPTCHA -->
          <div class="g-recaptcha" data-sitekey="6LfXQvIrAAAAAPKXa0mApiUxMnPlsg1X1Wxy1s2m"></div>
          <script src="https://www.google.com/recaptcha/api.js" async defer></script>

          <button
            type="submit"
            class="w-full bg-blue-600 text-white font-bold py-4 px-6 rounded-lg hover:bg-blue-700 transform hover:scale-105 transition-all"
          >
            {{ site.rsvp.submitButton }}
          </button>

          <div id="form-feedback" class="hidden text-center p-4 rounded-lg"></div>
        </form>
      </div>
    </div>
  </section>
</div>

<script>
const WEBHOOK_URL = '{{ site.webhookUrl }}';

document.getElementById('rsvp-form').addEventListener('submit', async function(e) {
  e.preventDefault();

  const feedback = document.getElementById('form-feedback');
  const submitBtn = e.target.querySelector('button[type="submit"]');

  const recaptchaResponse = grecaptcha.getResponse();
  if (!recaptchaResponse) {
    feedback.className = 'text-center p-4 rounded-lg bg-red-100 text-red-800';
    feedback.textContent = 'Please complete the reCAPTCHA before submitting.';
    feedback.classList.remove('hidden');
    return;
  }

  const formData = {
    name: document.getElementById('name').value,
    email: document.getElementById('email').value,
    phone: document.getElementById('phone').value,
    source: document.getElementById('source').value,
    recaptcha: recaptchaResponse
  };

  submitBtn.disabled = true;
  submitBtn.textContent = 'Submitting...';

  try {
    await fetch(WEBHOOK_URL, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(formData),
      mode: 'no-cors'
    });

    feedback.className = 'text-center p-4 rounded-lg bg-green-100 text-green-800';
    feedback.textContent = 'Thank you! Your RSVP has been confirmed. Check your email for details.';
    feedback.classList.remove('hidden');
    e.target.reset();
    grecaptcha.reset();

  } catch (error) {
    feedback.className = 'text-center p-4 rounded-lg bg-red-100 text-red-800';
    feedback.textContent = 'Something went wrong. Please try again or email {{ site.contact.email }}';
    feedback.classList.remove('hidden');
    submitBtn.disabled = false;
    submitBtn.textContent = '{{ site.rsvp.submitButton }}';
  }
});
</script>

